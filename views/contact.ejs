<%- include("partials/header"); %>
<!--Section: Contact v.2-->
<section class="mb-4">
<div style= "max-width:50%; margin:auto;">


    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4" style= "font-size:50px; padding-bottom:20px;">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5" style= "font-size:20px;  padding-bottom:20px;">Feel free to reach out us !</p>

    <div class="row">

        <!--Grid column-->
        <div >
            <form id="contact-form" name="contact-form" action="/contactSubmit" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">

                            <input type="text" id="name" name="name"  placeholder = "Your name" class="form-control">

                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">

                            <input type="text" id="email" name="email" placeholder = "Your email address" class="form-control">

                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">

                            <input type="text" id="subject" name="subject" placeholder = "Subject" class="form-control">

                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row" style= "padding-bottom:30px;" >

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">

                            <textarea type="text" id="message" name="message" rows="5" placeholder = "Your Message..." class="form-control md-textarea"></textarea>

                        </div>

                    </div>
                </div>
                <!--Grid row-->
                <div class="text-center text-md-left">
                  <button type="submit" name="button"class="btn btn-dark btn-lg">Send</button>

                </div>
            </form>



        </div>
        <!--Grid column-->

        <!--Grid column-->

        <!--Grid column-->

    </div>
</div>
</section>
<!--Section: Contact v.2-->


<%- include("partials/footer"); %>
