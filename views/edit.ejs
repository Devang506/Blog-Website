<form  action="/update" method="post">
  <div class="form-group">
    <label <b>Display Name</b></label>
     <input type="text" name="displayName" value = <%=displayName%> class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
  <label <b>Title</b></label>
   <input type="text" name="postTitle" value = <%=postTitle%> class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
   </div>
  <div class="form-group">
  <label for = "textarea"  <b>Post</b></label>
  <textarea class="form-control z-depth-1 textarea" id="exampleFormControlTextarea6"   name="postBody" rows="5" cols="80" ><%=postBody%> </textarea>
  <input type="hidden" name="postId" value=<%=postId%>>
  </div>
  <button class="btn btn-dark btn-lg" type="submit" name="button">Update</button>

</form>

